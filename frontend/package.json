{
  "name": "fire-department-frontend",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@types/node": "^16.18.68",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "lucide-react": "^0.294.0",
    "axios": "^1.6.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run copy-to-backend",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "copy-to-backend": "rm -rf ../public/* && cp -r build/* ../public/",
    "dev": "REACT_APP_API_URL=http://localhost:5000 react-scripts start",
    "build:dev": "REACT_APP_API_URL=http://localhost:5000 npm run build",
    "build:prod": "REACT_APP_API_URL=https://your-domain.com npm run build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000"
}
