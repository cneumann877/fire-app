{
  "name": "fire-department-backend",
  "version": "1.0.0",
  "description": "Fire Department Management System Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-db": "psql -U postgres -f database-setup.sql",
    "build-frontend": "cd frontend && npm run build && cp -r build/* ../public/",
    "install-all": "npm install && cd frontend && npm install",
    "deploy": "npm run install-all && npm run build-frontend && npm start"
  },
  "keywords": [
    "fire-department",
    "emergency-services",
    "incident-management",
    "firstdue"
  ],
  "author": "Fire Department IT",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "node-cron": "^3.0.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "csv-parser": "^3.0.0",
    "moment": "^2.29.4",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
